<!DOCTYPE html>
<html>

<%- include('components/head'); %>

    <body>
        <div id="overlay">
            <div class="spinner-border" style="width: 3rem; height: 3rem; top: 50%; left: 50%; position: absolute; margin-top: -50px;  margin-left: -100px;" role="status">
                <span class="sr-only">Loading...</span>
              </div>
        </div>
        <div class="container mt-5 text-center">
            <h1 class="color-blue">Quản lý gợi ý từ</h1>
            <div class="row">
                <div class="col">
                    <div class="d-block mx-auto" style="height: 300px; width: 1200px;">
                        <table class="table mt-20px">
                            <thead>
                                <tr>
                                    <th scope="col">Nhóm</th>
                                    <th scope="col">Từ</th>
                                    <th scope="col">Ngày tạo</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i < feedbacks.length; i++) {%>
                                    <% if(feedbacks[i] && feedbacks[i].word) { %>
                                        <tr>
                                            <td>
                                                <% if(groups["_" + feedbacks[i].group] && groups["_" + feedbacks[i].group].length> 0) { %>
                                                    <%= groups["_" + feedbacks[i].group] %>
                                                <%} else {%>
                                                    <%= feedbacks[i].otherGroup %>
                                                <% } %>
                                            </td>
                                            <td class="d-inline-block text-truncate" style="max-width: 300px;" onmouseover="showText(this)" onmouseout="limitText(this)">
                                                <%= feedbacks[i].word %>
                                            </td>
                                            <td>
                                                <%= feedbacks[i].date %>
                                            </td>
                                            <td>
                                                <% if (feedbacks[i].word.split(',').length) %>
                                                <button class="btn-merge btn btn-outline-success" onclick="onMerge('<%=  feedbacks[i].id %>')"> 
                                                    Gộp <%= feedbacks[i].word.split(',').length %> từ  
                                                </button> &nbsp;
                                                <button class="btn btn-delete btn-outline-danger" onclick="onDelete('<%=  feedbacks[i].id %>')">Xóa</button>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <script src="/js/admin.js"></script>
    </body>

</html>